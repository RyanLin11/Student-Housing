extends Layout 

block content 
    form(method='POST' action='/login')
        div.input-group.mb-3
            span.input-group-text @
            div.form-floating
                input.form-control(type='text' id='username' name='username' placeholder='John Doe' required)
                label.form-label(for='username') Username
        br 
        div.form-floating.mb-3
            input.form-control(type='password' id='password' name='password' placeholder='Password' required) 
            label.form-label(for='password') Password
        br
        input.btn.btn-primary(type='submit' value='Login')
        br
        if errorMessage
            div.alert.alert-warning.d-flex.align-items-center
                i.bi.bi-exclamation-triangle-fill
                p= errorMessage
        p New to Student Housing? 
            a(href='/users/register') Register here
        br
    